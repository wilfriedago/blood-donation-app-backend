{
  "name": "heartofafrica-api",
  "version": "1.0.0",
  "description": "",
  "author": "Wilfried AGO <wilfriedago@pm.me>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "is-ci || husky install",
    "typeorm": "env-cmd ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "pnpm typeorm --dataSource=src/database/data-source.ts migration:generate src/database/migrations/LastUpdatedMigrations",
    "migration:create": "pnpm typeorm migration:create src/database/migrations/LastUpdatedMigrations",
    "migration:run": "pnpm typeorm --dataSource=src/database/data-source.ts migration:run",
    "migration:revert": "pnpm typeorm --dataSource=src/database/data-source.ts migration:revert",
    "migration:show": "pnpm typeorm --dataSource=src/database/data-source.ts migration:show",
    "schema:drop": "pnpm typeorm --dataSource=src/database/data-source.ts schema:drop",
    "seed:run": "ts-node -r tsconfig-paths/register ./src/database/seeds/run-seed.ts",
    "db:regenerate": "pnpm schema:drop && rm -f src/database/migrations/* && pnpm migration:generate && pnpm migration:run && pnpm seed:run",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:swc": "swc src -d dist -w src",
    "start:swc": "nodemon dist/src/main",
    "dev:swc": "nodemon --watch src --exec \"pnpm start:swc\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "env-cmd jest --config ./tests/jest-e2e.json",
    "services:all": "docker compose -f docker-compose.dev.yaml up -d postgres adminer maildev redis",
    "services:alpine": "docker compose -f docker-compose.dev.yaml up -d postgres maildev",
    "services:postgres": "docker compose -f docker-compose.dev.yaml up -d postgres",
    "services:adminer": "docker compose -f docker-compose.dev.yaml up -d adminer",
    "services:maildev": "docker compose -f docker-compose.dev.yaml up -d maildev",
    "services:redis": "docker compose -f docker-compose.dev.yaml up -d redis",
    "services:stop": "docker compose -f docker-compose.dev.yaml stop",
    "services:down": "docker compose -f docker-compose.dev.yaml down && docker volume prune -f"
  },
